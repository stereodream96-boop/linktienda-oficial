<IfModule mod_rewrite.c>
  RewriteEngine On
  # No rewrite for existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Reescribe requests a /api/* hacia backend/index.php (ruta relativa)
  RewriteRule ^api/(.*)$ backend/index.php [L,QSA]
</IfModule>
